%div.container-fluid{'ng-controller' => 'rumorCtrl'}
  .row
    .col-md-3{'ng-repeat' => 'status in statuses'}
      %div
        .row
          .col-md-12
            %strong
              {{status.name}}
        %br
        .row
          .col-md-12
            %ul{'ng-repeat' => "rumor in rumors | filter:{ status: status.name}" }
              %li
                %span
                  %rumor{rumor: 'rumor', statuses: 'statuses', urgencies: 'urgencies'} 


