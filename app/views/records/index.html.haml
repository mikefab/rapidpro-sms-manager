  %tbody
    - @records.each do |record|
      %tr
        %td= record.run
        %td= record.phone
        %td= record.text
        %td= record.flow
        %td= record.relayer
        %td= record.channel
        %td= record.values
        %td= record.steps
        %td= record.step
        %td= record.primary
        %td= record.ids
        %td= link_to 'Show', record
        %td= link_to 'Edit', edit_record_path(record)
        %td= link_to 'Destroy', record, :method => :delete, :data => { :confirm => 'Are you sure?' }

