%h1 Listing records

%table
  %thead
    %tr
      %th Run
      %th Phone
      %th Text
      %th Flow
      %th Relayer
      %th Channel
      %th Values
      %th Steps
      %th Step
      %th Primary
      %th Ids
      %th
      %th
