%div.capsule{'ng-mouseenter' => 'show_options()', 'ng-mouseleave' => 'show_options()', 'ng-class' => "{urgency_low: rumor.urgency == 'low', urgency_medium: rumor.urgency == 'medium', urgency_high: rumor.urgency == 'high'}"}
  {{rumor.text}}
  %br
  {{rumor.arrived_on | date:'MM/dd/yyyy h:mma'}}
  %div.rumor_options
    %div{'ng-show' => 'display_options'}
      %span{'ng-repeat' => 'urgency in urgencies'}
        %span.urgency_box{title: 'urgency: {{urgency.name}}', 'ng-click' => 'update_urgency(urgency.name)', 'ng-class' => 'urgency.name'}
          &nbsp;&nbsp;
      &nbsp;
      .glyphicon.glyphicon-trash.pointer{title: 'soft delete', 'ng-click' => 'delete()'}
      &nbsp;
      %span
        %i
          %span.pointer{title: '{{status.name}}', style: 'color:black;', 'ng-repeat' => 'status in statuses', 'ng-click' => 'update_status(status.name)'}
            {{status.symbol}}


      &nbsp;
      .glyphicon.glyphicon-comment.pointer{'ng-click' => "open('lg')"}
      / &nbsp;
      / .glyphicon.glyphicon-earphone{'ng-click' => "open('lg')"}

      .glyphicon.glyphicon-ok.pointer{'ng-class' => "{is_public: rumor.is_public == 1, not_public: rumor.is_public != 1}", 'title' => 'Make rumor public', 'ng-click' => 'make_public()'}
  / .alert.fade{"active-class" => "in", "flash-alert" => "success"}
  /   %span.alert-message {{flash.message}}
