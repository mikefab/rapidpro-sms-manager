.row
  .col-xs-3{'ng-repeat' => 'status in statuses'}
    %div
      .row
        .col-xs-12.text-center
          %strong
            %capitalize{word: 'status.name'}
%br

%div{'ng-show' => 'rumors_loaded'}
  %strong{'ng-show' => 'rumors.length < 1', style: 'font-size:24px;position:relative;left:200px;'}
    There are no rumors yet.


.row.pre-scrollable{style: 'min-height: 500px;'} 
  .col-xs-3{'ng-repeat' => 'status in statuses'}
    %div
      .row
        .col-xs-12
          %ul{'ng-repeat' => "rumor in rumors | filter:{ status: status.name, soft_delete: !true}" }
            %li
              %span
                %rumor{rumor: 'rumor', statuses: 'statuses', urgencies: 'urgencies'} 
